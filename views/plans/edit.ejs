<%- include('../partials/header', {title: "Edit plan"}) %>

<div class="container-sm" style="max-width: 600px">
  <h1 class="mb-4 text-primary">Edit plan</h1>
  <form method="POST" action="/plans/edit/<%= plan.planid %>" class="card p-4 shadow-sm bg-white">
    <div class="mb-3">
      <label class="form-label">Plan name</label>
      <input type="text" name="planname" class="form-control" value="<%= plan.planname %>" required />
    </div>

    <div class="mb-3">
      <label class="form-label">Max conversions per day</label>
      <input
        type="number"
        name="maxconversionsperday"
        class="form-control"
        value="<%= plan.maxconversionsperday %>"
        required
      />
    </div>

    <div class="mb-3">
      <label class="form-label">Max file size (MB)</label>
      <input type="number" name="maxfilesize" class="form-control" value="<%= plan.maxfilesize %>" required />
    </div>

    <div class="d-flex gap-2">
      <button type="submit" class="btn btn-primary">Save changes</button>
      <a href="/plans" class="btn btn-outline-secondary">Cancel</a>
    </div>
  </form>
</div>

<%- include('../partials/footer') %>
