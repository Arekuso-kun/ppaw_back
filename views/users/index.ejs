<%- include('../partials/header', {title: "Users list"}) %>

<a href="/users/create/new" class="btn btn-success mb-3">Add new user</a>
<h1 class="mb-4 text-primary">Users</h1>

<table class="table table-hover table-bordered shadow-sm">
  <thead class="table-primary">
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Plan</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% users.forEach(user => { %>
    <tr>
      <td><%= user.userid %></td>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.plans ? user.plans.planname : 'N/A' %></td>
      <td>
        <a href="/users/<%= user.userid %>" class="btn btn-sm btn-outline-primary">Details</a>
        <a href="/users/edit/<%= user.userid %>" class="btn btn-sm btn-outline-warning">Edit</a>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>

<%- include('../partials/footer') %>
