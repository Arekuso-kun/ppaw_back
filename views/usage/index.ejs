<%- include('../partials/header', {title: "Usage logs"}) %>

<a href="/usage/create/new" class="btn btn-success mb-3">Log new usage</a>
<h1 class="mb-4 text-primary">Usage logs</h1>

<table class="table table-hover table-bordered shadow-sm">
  <thead class="table-primary">
    <tr>
      <th>ID</th>
      <th>User</th>
      <th>Date</th>
      <th>Type</th>
      <th>Status</th>
      <th>File size (Bytes)</th>
    </tr>
  </thead>
  <tbody>
    <% usages.forEach(usage => { %>
    <tr>
      <td><%= usage.usageid %></td>
      <td><%= usage.users ? usage.users.name : 'Unknown User' %></td>
      <td><%= usage.date.toLocaleString() %></td>
      <td><%= usage.conversiontype %></td>
      <td><%= usage.status %></td>
      <td><%= usage.filesize %></td>
    </tr>
    <% }) %>
  </tbody>
</table>

<%- include('../partials/footer') %>
